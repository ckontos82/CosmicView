@model CosmicViewSharedLib.Models.Picture

@{
    ViewData["Title"] = "Picture Of The Day";
}

<h1 class="display-4">Picture Details</h1>

<form asp-action="SavePic" method="post">
    <div class="card mb-4">
        <div class="card-header">
            @Html.DisplayFor(model => model.Title)
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>

                @if (!string.IsNullOrEmpty(Model.Copyright))
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Copyright)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Copyright)
                    </dd>
                }

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Explanation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Explanation)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Hdurl)
                </dt>
                <dd class="col-sm-10">
                    <a href="@Model.Hdurl" target="_blank">@Model.Hdurl</a>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Url)
                </dt>
                <dd class="col-sm-10">
                    <a href="@Model.Url" target="_blank">@Model.Url</a>
                </dd>
                <dt class="col-sm-2">
                    Image
                </dt>
                <dd class="col-sm-10">
                    <img src="@Model.Url" style="width: 50%; height:auto" />
                </dd>
            </dl>
        </div>
    </div>

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Copyright)
    @Html.HiddenFor(model => model.Date)
    @Html.HiddenFor(model => model.Explanation)
    @Html.HiddenFor(model => model.Hdurl)
    @Html.HiddenFor(model => model.MediaType)
    @Html.HiddenFor(model => model.ServiceVersion)
    @Html.HiddenFor(model => model.Title)
    @Html.HiddenFor(model => model.Url)

    <button type="submit" class="btn btn-primary">Save Picture</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to Home Index</a>
