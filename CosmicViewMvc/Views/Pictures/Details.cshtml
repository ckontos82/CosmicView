@model CosmicViewSharedLib.Models.Picture

@{
    ViewData["Title"] = "Picture Details";
}

<h1 class="display-4">Picture Details</h1>

<div class="card mb-4">
    <div class="card-header">
        @Html.DisplayFor(model => model.Title)
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Explanation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Explanation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Hdurl)
            </dt>
            <dd class="col-sm-10">
                <a href="@Model.Hdurl" target="_blank">@Model.Hdurl</a>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Url)
            </dt>
            <dd class="col-sm-10">
                <a href="@Model.Url" target="_blank">@Model.Url</a>
            </dd>
            <dt class="col-sm-2">
                Image
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.Url" style="width: 50%; height:auto" />
            </dd>
        </dl>
    </div>
</div>
<a asp-action="Index" class="btn btn-primary">Back to List</a>
